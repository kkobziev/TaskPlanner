@page
@model TaskPlanner.Pages.Tasks.DeleteModel
@{
    ViewData["Title"] = Localizer["DeleteTask"];
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white">
                    <h1 class="h4 mb-0">@ViewData["Title"]</h1>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning mb-4">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        @Localizer["ConfirmDelete"]
                    </div>
                    
                    <div class="mb-4">
                        <h4 class="h5 mb-3">@Model.Task.Name</h4>
                        
                        @if (!string.IsNullOrEmpty(Model.Task.Description))
                        {
                            <div class="mb-3">
                                <label class="text-muted small mb-1">@Localizer["TaskDescription"]</label>
                                <p>@Model.Task.Description</p>
                            </div>
                        }
                        
                        <div>
                            <label class="text-muted small mb-1">@Localizer["DueDate"]</label>
                            <p>@Model.Task.DueDate.ToShortDateString()</p>
                        </div>
                    </div>
                    
                    <form method="post" class="mt-4">
                        <input type="hidden" asp-for="Task.Id" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i> @Localizer["DeleteTaskButton"]
                            </button>
                            <a asp-page="./Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-1"></i> @Localizer["CancelButton"]
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>