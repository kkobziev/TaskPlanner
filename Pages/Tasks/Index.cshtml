@page
@model TaskPlanner.Pages.Tasks.IndexModel
@{
    ViewData["Title"] = "Task List";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create">Create New Task</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Completed</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model.Tasks)
        {
            <tr>
                <td>@task.Name</td>
                <td>@task.Description</td>
                <td>@task.DueDate.ToShortDateString()</td>
                <td>
                    <input type="checkbox" disabled="disabled" @(task.IsCompleted ? "checked" : "") />
                </td>
                <td>
                    <a asp-page="Edit" asp-route-id="@task.Id">Edit</a> |
                    <a asp-page="Delete" asp-route-id="@task.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>