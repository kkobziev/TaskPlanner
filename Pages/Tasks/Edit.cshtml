@page
@model TaskPlanner.Pages.Tasks.EditModel
@{
    ViewData["Title"] = Localizer["EditTask"];
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h1 class="h4 mb-0">@ViewData["Title"]</h1>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="Task.Id" />
                        
                        <div class="form-group mb-3">
                            <label asp-for="Task.Name" class="form-label">@Localizer["TaskName"]</label>
                            <input asp-for="Task.Name" class="form-control" />
                            <span asp-validation-for="Task.Name" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Task.Description" class="form-label">@Localizer["TaskDescription"]</label>
                            <textarea asp-for="Task.Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Task.Description" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-4">
                            <label asp-for="Task.DueDate" class="form-label">@Localizer["DueDate"]</label>
                            <input asp-for="Task.DueDate" class="form-control" type="date" />
                            <span asp-validation-for="Task.DueDate" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-1"></i> @Localizer["SaveButton"]
                            </button>
                            <a asp-page="./Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-1"></i> @Localizer["CancelButton"]
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}