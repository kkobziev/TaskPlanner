@page
@model TaskPlanner.Pages.IndexModel
@{
    ViewData["Title"] = "Task Planner";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Task Planner</h1>
    <p class="lead">Manage your tasks efficiently with our simple and intuitive task management system.</p>
    
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">📝 Add Tasks</h5>
                    <p class="card-text">Create new tasks with name, description, and due date.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">✅ Mark Complete</h5>
                    <p class="card-text">Track your progress by marking tasks as completed.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">🌍 Multilingual</h5>
                    <p class="card-text">Available in English and Ukrainian languages.</p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="mt-5">
        <a class="btn btn-primary btn-lg" asp-page="/Tasks/Index" role="button">
            Get Started with Your Tasks
        </a>
    </div>
</div>
